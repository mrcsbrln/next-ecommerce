generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  categoryId  String
  image       String?
  price       Float
  slug        String   @unique
  category    Category @relation(fields: [categoryId], references: [id])
  inventory   Int      @default(0)
}

model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  products Product[]
}
